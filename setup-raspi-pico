#!/bin/bash

# includes
. `dirname $0`/includes/common.inc
. `dirname $0`/includes/vscode.inc

############################################################################
echo "${style_blue}${style_bold}Install arm-none-eabi-gdb aka gdb-multiarch...${style_normal}"
sudo dnf -y install dnf-plugins-core
sudo dnf -y copr enable rleh/arm-none-eabi-gdb
sudo dnf -y install arm-none-eabi-gdb

############################################################################
echo "${style_blue}${style_bold}Build RPi-fork of openocd...${style_normal}"
sudo dnf -y install git-core libgpiod autoconf automake pkgconf libtool make gcc
# see https://src.fedoraproject.org/rpms/openocd/blob/rawhide/f/openocd.spec
sudo dnf -y install capstone-devel hidapi-devel jimtcl-devel libjaylink-devel libftdi-devel libusbx-devel
rm -rf /tmp/openocd-rpi-pico
git clone --recurse-submodules https://github.com/raspberrypi/openocd.git /tmp/openocd-rpi-pico
pushd /tmp/openocd-rpi-pico
libtoolize
autoreconf -i
./configure \
    --disable-werror \
    --enable-static \
    --disable-shared \
    --enable-dummy \
    --enable-ftdi \
    --enable-stlink \
    --enable-ti-icdi \
    --enable-ulink \
    --enable-usb-blaster-2 \
    --enable-ft232r \
    --enable-vsllink \
    --enable-xds110 \
    --enable-cmsis-dap-v2 \
    --enable-osbdm \
    --enable-opendous \
    --enable-aice \
    --enable-usbprog \
    --enable-rlink \
    --enable-armjtagew \
    --enable-cmsis-dap \
    --enable-nulink \
    --enable-kitprog \
    --enable-usb-blaster \
    --enable-presto \
    --enable-openjtag \
    --enable-jlink \
    --enable-parport \
    --enable-jtag_vpi \
    --enable-jtag_dpi \
    --enable-ioutil \
    --enable-amtjtagaccel \
    --enable-ep39xx \
    --enable-at91rm9200 \
    --enable-gw16012 \
    --enable-oocd_trace \
    --enable-buspirate \
    --enable-sysfsgpio \
    --enable-esp-usb-jtag \
    --enable-xlnx-pcie-xvc \
    --enable-remote-bitbang \
    --disable-internal-jimtcl \
    --disable-doxygen-html \
    --with-capstone

make -j4
popd

############################################################################
echo "${style_blue}${style_bold}Install arm-none-eabi-binutils...${style_normal}"
sudo dnf -y install arm-none-eabi-binutils*
sudo ln -sf /usr/bin/arm-none-eabi-gdb /usr/bin/gdb-multiarch
sudo ln -sf /usr/bin/arm-none-eabi-objdump /usr/bin/objdump-multiarch
sudo ln -sf /usr/bin/arm-none-eabi-nm /usr/bin/nm-multiarch

sudo dnf -y install hidapi
echo

############################################################################
echo "${style_blue}${style_bold}Install additional packages to run examples...${style_normal}"
sudo dnf -y install \
    python3-pyusb


############################################################################
echo "${style_blue}${style_bold}Install Raspberry Pi Pico udev-rules...${style_normal}"
sudo cp `dirname $0`/udev-rules/99-pico.rules /etc/udev/rules.d/
sudo udevadm control --reload-rules
echo

############################################################################
install_bare_vscode

echo "${style_blue}${style_bold}Install Raspberry Pi Pico VSCode extension...${style_normal}"
code --install-extension raspberry-pi.raspberry-pi-pico
echo

for file in `find "$HOME/.vscode" -name 'pico_project.py'`; do
    sed -i 's|${{command:raspberry-pi-pico.getGDBPath}}|/usr/bin/gdb-multiarch|g' "$file"
done

